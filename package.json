{
	"name": "pikesies",
	"version": "1.0.0",
	"description": "Visual Studio Code Extension to Manage World Anvil Presentation CSS",
	"author": {
		"name": "Jan Kaltenecker",
		"url": "https://www.cold90.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Jan-Ka/pikesies-vsc"
	},
	"bugs": {
		"url": "https://github.com/Jan-Ka/pikesies/issues"
	},
	"homepage": "https://github.com/Jan-Ka/pikesies",
	"license": "MIT",
	"engines": {
		"vscode": "^1.61.0"
	},
	"displayName": "pikesies",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:pikesies.validate",
		"onLanguage:css"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pikesies.validate",
				"title": "Validate PCSS"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == css",
					"command": "pikesies.validate",
					"group": "modification"
				}
			]
		}
	},
	"configuration": {
		"type": "object",
		"title": "pikesies configuration",
		"properties": {
			"pikesies.maxNumberOfProblems": {
				"scope": "resource",
				"type": "number",
				"default": 100,
				"description": "Controls the maximum number of problems reported by pikesies"
			},
			"pikesies.trace.server": {
				"scope": "window",
				"type": "string",
				"enum": [
					"off",
					"messages",
					"verbose"
				],
				"default": "off",
				"description": "Traces the communication between VS Code and the language server."
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"watch": "tsc -b -w",
		"test": "cd client && npm test && cd ..",
		"lint": "node ./build/bin/all.js run lint",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "node ./build/bin/all.js install"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "16.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.0.1",
		"glob": "^7.2.0",
		"merge-options": "^3.0.4",
		"mocha": "^9.1.3",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.4",
		"webpack": "^5.58.2",
		"webpack-cli": "^4.9.1"
	}
}